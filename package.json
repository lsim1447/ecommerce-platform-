{
  "name": "ecommerce-platform",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:dashboard": "turbo run dev --filter=dashboard --concurrency=14",
    "dev:store": "turbo run dev --filter=store --concurrency=14",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.2.3",
    "typescript": "5.4.5"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "drizzle-orm": "^0.35.3",
    "pg": "^8.13.1"
  }
}
