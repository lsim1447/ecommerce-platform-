{
  "name": "ecommerce-platform",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:docs": "turbo run dev --filter='./packages/*' --filter=docs --concurrency=14",
    "dev:web": "turbo run dev --filter='./packages/*' --filter=web --concurrency=14",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.2.3",
    "typescript": "5.4.5"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
